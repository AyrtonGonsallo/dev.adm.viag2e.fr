{% extends 'layout.html.twig' %}

{% block title %}Viag2e | Notifications{% endblock %}

{% block body %}
    <div class="m-subheader">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ path('dashboard') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="#" class="m-nav__link">
                            <span class="m-nav__link-text">Notifications</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="m-content">
        <div class="m-portlet m-portlet--mobile">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Liste des notifications
                        </h3>
                    </div>
                </div>
            </div>
           
            <div class="m-portlet__body">
                <div class="m-demo">
                    <div class="m-demo__preview">
                        <div class="m-list-timeline">
                            <div class="m-list-timeline__items">
                                {% for notification in notifications2 %}
                                <div class="m-list-timeline__item">
                                    <span class="m-list-timeline__badge m-list-timeline__badge--{{ randomColor() }}"></span>
                                    <span class="m-list-timeline__text">{{ notification.text|raw  }}</span>
                                    <span class="m-list-timeline__time">{{ notification.time  }}</span>
                                    <span class="m-list-timeline__time" ><a href="{{ path('valider_notification', {'id': notification.id}) }}" >valider</a></span>
                                </div>
                                {% else %}
                                    <div class="text-center">RAS<br />Tout est en ordre</div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}