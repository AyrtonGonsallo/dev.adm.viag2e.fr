<style type="text/css">
    <!--
    table { vertical-align: top; }
    tr    { vertical-align: top; }
    td    { vertical-align: top; }
    -->
</style>
<page backcolor="#FEFEFE" footer="date;time;page" style="font-size: 12pt">
    <bookmark title="Facture" level="0" ></bookmark>
    <table cellspacing="0" style="width: 100%; text-align: center; font-size: 14px">
        <tr>
            <td style="text-align: left; width: 50%;">
                <img style="width: 150px;top:20px;position:absolute" src="{{ pdf_logo_path }}" alt="Logo"><br />
                {{ parameters.address|raw }}<br />
                {{ parameters.postalcode }} {{ parameters.city|upper }}<br /><br />
                Téléphone: {{ parameters.phone }}<br />
                {% for i in 0..9 %}
                    &nbsp;
                {% endfor %}06 67 11 61 83<br />
                Mail: {{ parameters.mail }}<br />
                {{ parameters.site }}
            </td>
            <td style="width: 50%; padding-top: 25px;text-align: center;position:relative;">
                {{ parameters.city|title }}, le {{ data.date.current_day }}
                {% for i in 0..9 %}
                    <br />
                {% endfor %}
                <div style="position:absolute;left:300px;top:-40px;width:300px;text-align: left;">
                 {{ data.warrant.lastname }} {{ data.warrant.firstname }}<br />
                {{ data.warrant.address }}<br />
                {{ data.warrant.postalcode }} {{ data.warrant.city }}
                </div>
            </td>
        </tr>
    </table>
    <br>

    <table cellspacing="0" style="width: 100%; text-align: left; font-size: 11pt;">
        <colgroup>
            <col style="width: 10%;">
            <col style="width: 70%;">
            <col style="width: 10%; text-align: right">
            <col style="width: 10%;">
        </colgroup>
        <tbody>
        <tr>
            <td></td>
            <td>
                Monsieur, Madame,<br /><br />
                Veuillez trouver ci-après le décompte annuel des rentes viagères et honoraires pour l'année {{ data.year }}.<br /><br /><br /><br />
            </td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td colspan="4" style="background: #757575;font-weight: bold;text-align: center;">DÉCOMPTE ANNUEL {{ data.year }}</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <br /><br /><br />
                Référence du dossier : {{ data.property.title }}<br /><br />
                Adresse du bien : {{ data.property.address }} <br /><br />
                Crédirentier: {{ data.property.firstname }}{% if data.property.firstname2 is not empty %} et {{ data.property.firstname2 }}{% endif %} {{ data.property.lastname }}<br /><br />
                Période du 01/01/{{ data.year }} au 31/12/{{ data.year }}<br /><br /><br />
            </td>
            <td></td>
            <td></td>
        </tr>
        {% if data.warrant.type == constant('App\\Entity\\Warrant::TYPE_BUYERS') %}
            <tr>
                <td colspan="4">
                    <table style="width: 100%">
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant total appelé au débirentier :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.cumulation }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant total reversé au crédirentier :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.warrant }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant des honoraires :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.honoraries }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                    </table>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">
                    <table style="width: 100%">
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant total appelé au débirentier :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.warrant }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant total reversé au crédirentier :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.warrant }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                        <tr>
                            <td style="width: 10%;"></td>
                            <td style="width: 50%;">
                                Montant des honoraires :
                            </td>
                            <td style="width: 30%; text-align: right;">
                                <span style="font-weight: bold;">{{ data.totals.honoraries }} €</span>
                            </td>
                            <td style="width: 10%;"></td>
                        </tr>
                    </table>
                </td>
            </tr>
        {% endif %}
        <tr>
            <td></td>
            <td colspan="2">
                <br /><br /><br /><br /><br /><br />
                Nous restons à votre disposition pour toute information complémentaire. Veuillez agréer, Monsieur, Madame, nos sincères salutations.
                <br /><br /><br /><br />
            </td>
            <td></td>
        </tr>
        </tbody>
    </table>
    <table cellspacing="0" style="width: 100%; text-align: left; font-size: 11pt;">
        <tr>
            <td style="width: 65%"></td>
            <td style="width: 35%">Vincent GIBELIN,</td>
        </tr>
    </table>
</page>
